@{
  Layout = "_Layout";
}

@using PublicLibrary.Models;

<h1>Authors</h1>

@if (@Model.Count == 0)
{
  <h3>No Authors have been added at this time</h3>
} 

@foreach (Author author in Model)
{
  <li>@Html.ActionLink($"{author.Title}", "Details", new { id = author.AuthorId })</li>
}

<p>@Html.ActionLink("Add new author", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>